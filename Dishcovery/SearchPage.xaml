    <Shell.TitleView>
        <Label VerticalOptions="Center" 
               FontFamily="NunitoSansBold" 
               Text="Поиск"
               FontSize="Large"
               TextColor="{StaticResource White}"/>
    </Shell.TitleView>
    
    <Grid RowDefinitions="Auto,*" BackgroundColor="{StaticResource WhiteGray}" RowSpacing="5" Padding="3">
        <Frame Style="{StaticResource CardView}" HeightRequest="35">
            <Grid ColumnDefinitions="*, *, *, Auto" RowDefinitions="Auto" ColumnSpacing="5">
                <views:CursorEntry  x:Name="searchEntry"
                                      Placeholder="Введите название..." 
                                      BackgroundColor="{StaticResource White}"
                                      Grid.Column="0"
                                      Grid.ColumnSpan="3"
                                      HeightRequest="37"
                                      CursorColor="{StaticResource Primary}"
                                      />
                <ImageButton Grid.Column="3" x:Name="SearchButton" 
                         Source="search_icon.png"
                         WidthRequest="35"
                         HeightRequest="35" 
                         BackgroundColor="{StaticResource White}" 
                         CornerRadius="5"
                         Clicked="SearchButton_Clicked">
                </ImageButton>
            </Grid>
        </Frame>
